import random

print("Bem-vindo ao jogo : adivinhe o numero!")
print("Eu escolhi um numero entre 1 e 100. Tente adivinhar!")

# o computador escolhe um nÃºmero aleatÃ³rio entre 1 e 100
numero_secreto = random.randint(1, 100)

